#all {



}

#itemall {
  margin: 10rpx;
  border-radius: 3% ;
  background-color: #ff751a;



}
#scrollView{
  white-space: nowrap;
  height: 125rpx;
  width: 100%;



}
#viewItem{
  display: inline-flex;
  align-items: center;
  overflow: hidden;

  


}

#viewItem text{
  width: 735rpx;
  line-height: 125rpx;
  
  text-overflow: ellipsis;
  text-align: center;
  color: white;


}


#buttonDel{
  height: 125rpx;
  line-height: 125rpx;
  background-color: #ff751a;
  color: red;
  margin-left: 10rpx;
}
#buttonRestore{
  height: 125rpx;
  line-height: 125rpx;
  background-color: #ff751a;
  color: #07c160;
}

#buttonDone{
  height: 125rpx;
  line-height: 125rpx;
  background-color: #ff751a;
  color: #07c160;
}


#viewAdd{
  width: 710rpx;
  text-align: center;
  line-height: 50rpx;
  height: 50rpx;
  padding: 20rpx;
  color: #ff751a;
}



#view2{
  position: fixed;

  left: 80rpx;
  right: 80rpx;
  top: 150px;
  background: #ff751a;
  border-style: solid;
  border-radius: 20rpx;

  border-width: 1rpx;
  border-color: #07c160;

  padding: 40rpx;



}

#Donetitle{
  color: white;
  margin-bottom: 40rpx;
  text-align: center;
}

#overView{
  display: grid;
  grid-template-columns: 1fr 1fr 1fr 1fr 1fr 1fr 1fr;
}


